@model IEnumerable<LojaVirtual.Data.Model.Produto>
@{
    ViewData["Title"] = "Produtos";
}

<div class="container">
  <div class="row">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="@item.Imagem" alt="@item.Titulo" class="img-fluid" style="max-height: 250px;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Titulo</h5>
                        <p class="card-text">@item.Descricao</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

